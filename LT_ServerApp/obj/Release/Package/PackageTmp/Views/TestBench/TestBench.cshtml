@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main-container">
    <div class="row">
        <div class="col-md-12">
            <h4>TEST BENCH CONFIGURATION</h4><hr />
        </div>
        <div class="col-md-4" style="border-right:1px solid gray;">
            <h4 class="labelHeader">Priority</h4><br />
            <button class="btn btn-sm btn-primary" data-toggle="modal" data-target="#priorityModal" style="float:right">ADD</button>
            <table id="priorityDatatable" class="table table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Priority</th>
                        <th>Frequency(hrs)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
                <tfoot>

                </tfoot>
            </table>
        </div>

        <div class="col-md-8">
            <h4 class="labelHeader">Test Bench Config Details</h4><br />
            <button class="btn btn-sm btn-primary" data-toggle="modal" data-target="#testBenchModal" style="float:right">ADD</button>
            <table id="testBenchDatatable" class="table table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>TestBench ID</th>
                        <th>TestBench Name</th>
                        <th>DB Name</th>
                        <th>IP Address</th>
                        <th>DB User</th>
                        <th>PortNo</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="benchtableBody">
                    
                </tbody>
                <tfoot>

                </tfoot>
            </table>
        </div>
    </div>

    @* Add new Priority Modal Popup model *@
    <div class="modal fade" id="priorityModal" role="dialog" data-backdrop='static' data-keyboard='false' style="border-radius:unset;">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add Priority</h4>
                </div>
                <div class="modal-body">
                    <div class="row" style="margin-bottom:20px;">
                        <div class="col-md-12">
                            <label for="txtPriority">Priority Name <code>*</code></label> <br />
                            <input type="text" id="txtPriority" class="form-control" required />
                            <p><code>*.Required</code></p>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:20px;">
                        <div class="col-md-12">
                            <label for="drpFrequency">Select Frequency <code>(*. In Hours)</code></label> <br />
                            <select id="drpFrequency" name="SelectFrequency" class="form-control">
                                <option value="0">Select Frequency</option>
                                <option value="1">Hourly</option>
                                <option value="2">Every 2 hour</option>
                                <option value="6">Every 6 hour</option>
                                <option value="24">Daily</option>
                                <option value="168">Weekly</option>
                                <option value="720">Monthly</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnPrioritySave" class="btn btn-sm btn-success" style="border-radius:unset;"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
                    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Close</button>
                </div>
            </div>
        </div>
    </div>
    @* End of Role Modal Popup *@


